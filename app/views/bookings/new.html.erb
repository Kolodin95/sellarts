<div class="container d-flex flex-column align-items-center ">

<%# element.style {
    display: flex;
    flex-direction: column;
    align-items: center;
} %>

  <div class="card-booking">
    <%= cl_image_tag @artwork.photo.key %>
    <div class="card-infos-booking">
      <div>
        <h2><%=@artwork.title %></h2>
        <h2><%=@artwork.author %> <%=@artwork.creation_date %> <%=@artwork.denomination %></h2>
        <h2><%=@artwork.price %> balles</h2>
      </div>
      
    </div>
  </div>

  <%= simple_form_for [ @artwork, @booking ] do |f| %>
    <%= f.input :start_date, html5: true %>
    <%= f.input :end_date, html5: true %>
    <%= f.submit "Proceed to payment", class: "btn btn-success" %>
  <% end %>
</div>
